---
import {
  Award,
  Users,
  Sparkles,
  ShieldCheck,
  Heart,
  Star,
} from "@lucide/astro";

const features = [
  {
    icon: Award,
    title: "Mais de 30 Anos",
    description:
      "Tradição e experiência formando dançarinos e artistas desde 1992.",
  },
  {
    icon: Sparkles,
    title: "Método Exclusivo",
    description:
      "O Método Dullius integra diversas técnicas em uma abordagem única e inovadora.",
  },
  {
    icon: Users,
    title: "Equipe Qualificada",
    description:
      "Professores com formação profissional e experiência em grandes companhias.",
  },
  {
    icon: ShieldCheck,
    title: "Infraestrutura Premium",
    description:
      "5 salas climatizadas, estacionamento, vestiários, lounge e café.",
  },
  {
    icon: Heart,
    title: "Acolhimento",
    description: "Ambiente seguro e acolhedor para crianças, jovens e adultos.",
  },
  {
    icon: Star,
    title: "Espetáculos Anuais",
    description:
      "Apresentações em grandes teatros que marcam a vida dos nossos alunos.",
  },
];
---

<section id="por-que" class="py-24 lg:py-32">
  <div class="mx-auto max-w-7xl px-6">
    <div class="mb-16 text-center">
      <p class="text-sm font-semibold uppercase tracking-widest text-red-700">
        Diferenciais
      </p>
      <h2
        class="mt-3 text-4xl text-zinc-900 tracking-tighter font-medium md:text-5xl lg:text-6xl text-balance"
      >
        Por que escolher a Dullius?
      </h2>
      <p
        class="mx-auto mt-4 max-w-2xl text-lg xl:text-xl text-zinc-800 leading-relaxed"
      >
        Uma escola que transforma vidas atraves da danca, com tradicao, inovacao
        e muito amor pelo que faz.
      </p>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {
        features.map((feature) => {
          const Icon = feature.icon;
          return (
            <div class="group rounded-2xl border border-zinc-200 bg-white p-8 transition-all duration-300 hover:border-zinc-300 hover:shadow-lg">
              <div class="mb-5 flex h-12 w-12 items-center justify-center rounded-xl bg-red-50 text-red-700 transition-colors duration-300 group-hover:bg-red-700 group-hover:text-white">
                <Icon class="h-6 w-6" />
              </div>
              <h3 class="text-xl text-zinc-900 font-semibold tracking-tight">
                {feature.title}
              </h3>
              <p class="mt-2  text-zinc-700 leading-relaxed">
                {feature.description}
              </p>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
