---
// Footer.astro
const links = {
  cursos: [
    { label: "Metodo Dullius", href: "#cursos" },
    { label: "Ballet", href: "#cursos" },
    { label: "Jazz", href: "#cursos" },
    { label: "Dancas Urbanas", href: "#cursos" },
    { label: "Adulto", href: "#cursos" },
    { label: "AcroDance", href: "#cursos" },
  ],
  escola: [
    { label: "A Escola", href: "#por-que" },
    { label: "Infraestrutura", href: "#escola" },
    { label: "Equipe", href: "#por-que" },
    { label: "Depoimentos", href: "#por-que" },
    { label: "Eventos", href: "#galeria" },
  ],
};

const currentYear = new Date().getFullYear();
---

<footer id="contato" class="border-t border-border border-zinc-200 bg-white">
  <div class="mx-auto max-w-7xl px-6 py-16 lg:py-20">
    <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-4">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <span class="text-2xl text-zinc-900"> Dullius Dance</span>
        <p class="mt-4 text-sm text-zinc-800 leading-relaxed">
          Escola de Danca em Porto Alegre. Formando dancarinos e artistas ha
          mais de 30 anos. Viva essa Magia!
        </p>
        <div class="mt-6 flex gap-4">
          <a
            href="https://www.instagram.com/dulliusdance/"
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-10 w-10 items-center justify-center rounded-full bg-zinc-100 text-zinc-800 transition-colors hover:bg-zinc-200 hover:text-zinc-900"
            aria-label="Instagram"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
            </svg>
          </a>

          <a
            href="https://www.facebook.com/dulliusdance"
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-10 w-10 items-center justify-center rounded-full bg-zinc-100 text-zinc-800 transition-colors hover:bg-zinc-200 hover:text-zinc-900"
            aria-label="Facebook"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
              ></path>
            </svg>
          </a>

          <a
            href="https://www.youtube.com/@dulliusdance"
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-10 w-10 items-center justify-center rounded-full bg-zinc-100 text-zinc-800 transition-colors hover:bg-zinc-200 hover:text-zinc-900"
            aria-label="YouTube"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17"
              ></path>
              <path d="m10 15 5-3-5-3z"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Cursos -->
      <div>
        <h3
          class="text-sm font-semibold uppercase tracking-widest text-zinc-900"
        >
          Cursos
        </h3>
        <ul class="mt-4 flex flex-col gap-3">
          {
            links.cursos.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-zinc-800 transition-colors hover:text-zinc-900"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Escola -->
      <div>
        <h3
          class="text-sm font-semibold uppercase tracking-widest text-zinc-900"
        >
          Escola
        </h3>
        <ul class="mt-4 flex flex-col gap-3">
          {
            links.escola.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-zinc-800 transition-colors hover:text-zinc-900"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
